// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CalendarProvider {
  GOOGLE
  MICROSOFT
  APPLE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  // For NextAuth compatibility
  emailVerified DateTime?
  timezone  String   @default("America/Denver")
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  smsNumber String?
  pushSubscription Json?

  // User preferences
  dayWindowStartHour   Int     @default(8)
  dayWindowEndHour     Int     @default(18)
  defaultDurationMinutes Int   @default(30)
  googleSyncEnabled    Boolean @default(true)
  calendarSyncProviders CalendarProvider[] @default([])
  llmProvider          LlmProvider @default(NONE)
  openaiApiKey         String?  @db.Text
  lmStudioUrl          String   @default("http://localhost:1234")
  focusWorkMinutes     Int     @default(25)
  focusBreakMinutes    Int     @default(5)
  focusCycleCount      Int     @default(4)

  tasks    Task[]
  projects Project[]
  courses  Course[]
  accounts Account[]
  sessions Session[]
  studyGoals StudyGoal[]
  taskMemberships    TaskMember[]
  projectMemberships ProjectMember[]
  courseMemberships  CourseMember[]
  focusIntervals FocusIntervalLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  // For NextAuth provider compatibility (e.g., Google)
  refresh_token_expires_in Int?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id     String  @id @default(cuid())
  user   User    @relation(fields: [userId], references: [id])
  userId String
  title  String
  term   String?
  color  String?
  description String?
  syllabusUrl String?
  instructorName String?
  instructorEmail String?
  officeHours String[] @default([])
  creditHours Float?

  tasks Task[]
  studyGoals StudyGoal[]
  meetings CourseMeeting[]
  members CourseMember[]
}

model CourseMeeting {
  id         String  @id @default(cuid())
  course     Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId   String
  dayOfWeek  Weekday
  startMinutes Int
  endMinutes   Int
  location   String?

  @@index([courseId, dayOfWeek])
}

model Project {
  id          String  @id @default(cuid())
  user        User    @relation(fields: [userId], references: [id])
  userId      String
  title       String
  description String?
  instructionsUrl String?

  tasks Task[]
  members ProjectMember[]
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Weekday {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

enum RecurrenceType {
  NONE
  DAILY
  WEEKLY
  MONTHLY
}

model Task {
  id            String     @id @default(cuid())
  user          User?      @relation(fields: [userId], references: [id])
  userId        String?
  project       Project?   @relation(fields: [projectId], references: [id])
  projectId     String?
  course        Course?    @relation(fields: [courseId], references: [id])
  courseId      String?
  parent        Task?      @relation("Subtasks", fields: [parentId], references: [id], onDelete: Cascade)
  parentId      String?
  subtasks      Task[]     @relation("Subtasks")
  title         String
  notes         String?
  subject       String?
  status        TaskStatus @default(TODO)
  priority      TaskPriority @default(MEDIUM)
  position      Int        @default(0)
  effortMinutes Int?
  dueAt         DateTime?
  recurrenceType RecurrenceType @default(NONE)
  recurrenceInterval Int @default(1)
  recurrenceCount Int?
  recurrenceUntil DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  gradeScore    Float?
  gradeTotal    Float?
  gradeWeight   Float?

  events    Event[]
  reminders Reminder[]
  timeLogs  TaskTimeLog[]
  members   TaskMember[]
  attachments Attachment[]
  focusIntervals FocusIntervalLog[]

  @@index([dueAt, status])
  @@unique([userId, title, dueAt, recurrenceType, recurrenceInterval])
}

model Event {
  id       String   @id @default(cuid())
  task     Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId   String
  startAt  DateTime
  endAt    DateTime
  location String?
  googleEventId String? @unique
  externalSyncRefs Json   @default("{}")
}

enum ReminderChannel {
  EMAIL
  PUSH
  SMS
}

enum ReminderDeliveryStatus {
  PENDING
  SENT
  FAILED
}

model Reminder {
  id        String          @id @default(cuid())
  task      Task            @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    String
  channel   ReminderChannel
  offsetMin Int             @default(30)
  attemptCount Int          @default(0)
  lastAttemptAt DateTime?
  lastSentAt DateTime?
  lastStatus ReminderDeliveryStatus @default(PENDING)
  lastError String?
}

model TaskTimeLog {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    String
  userId    String
  startedAt DateTime
  endedAt   DateTime?

  @@index([taskId])
  @@index([userId])
}

enum FocusIntervalType {
  WORK
  BREAK
}

model FocusIntervalLog {
  id        String            @id @default(cuid())
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  task      Task?             @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    String?
  type      FocusIntervalType
  startedAt DateTime
  endedAt   DateTime

  @@index([userId, startedAt])
}

enum LlmProvider {
  NONE
  OPENAI
  LM_STUDIO
}

enum GoalType {
  SUBJECT
  COURSE
}

model StudyGoal {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  type          GoalType
  subject       String?
  course        Course?   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId      String?
  targetMinutes Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([userId, type, subject])
  @@unique([userId, courseId])
}

enum MemberRole {
  OWNER
  EDITOR
  VIEWER
}

model TaskMember {
  id      String   @id @default(cuid())
  task    Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  role    MemberRole @default(EDITOR)
  createdAt DateTime @default(now())

  @@unique([taskId, userId])
  @@index([userId])
}

model ProjectMember {
  id        String     @id @default(cuid())
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  role      MemberRole @default(EDITOR)
  createdAt DateTime   @default(now())

  @@unique([projectId, userId])
  @@index([userId])
}

model CourseMember {
  id       String     @id @default(cuid())
  course   Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  role     MemberRole @default(EDITOR)
  createdAt DateTime  @default(now())

  @@unique([courseId, userId])
  @@index([userId])
}

model Attachment {
  id           String   @id @default(cuid())
  task         Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId       String
  originalName String
  fileName     String
  mimeType     String
  size         Int
  url          String
  createdAt    DateTime @default(now())
}
