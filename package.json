{
  "name": "student-task-scheduler",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:watch": "nodemon --watch prisma/schema.prisma --watch next.config.mjs --watch tsconfig.json --watch tailwind.config.ts --watch postcss.config.js --watch .env --signal SIGTERM --exec \"sh -c 'npm run prisma:sync && next dev'\"",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "prisma:sync": "prisma generate && prisma db push",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.18.0",
    "@tanstack/react-query": "^5.52.0",
    "@trpc/client": "11.4.4",
    "@trpc/react-query": "11.4.4",
    "@trpc/server": "11.4.4",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.440.0",
    "next": "14.2.5",
    "next-auth": "4.24.7",
    "next-themes": "^0.4.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hot-toast": "^2.5.2",
    "recharts": "^2.15.4",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "jsdom": "^22.1.0",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.41",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.10",
    "typescript": "5.7.2",
    "vitest": "^2.0.5"
  }
}
